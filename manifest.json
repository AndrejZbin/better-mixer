{
  "manifest_version": 2,
  "name": "Better Mixer",
  "version": "1.5.2",
  "author": "Andrej Zb√≠n",

  "description": "Adds theatre mode to mixer.com. You can toggle theatre mode with a button or with 'T' key.",

  "icons": {
    "48": "icons/48.png",
	"96": "icons/96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mixer.com/*"],
      "js": ["js/jquery-3.4.1.min.js", "js/elements.js", "js/components.js", "js/theatre.js", "js/cleansite.js", "js/chatmessages.js",  "js/index.js"],
      "css": ["css/theatre.css"]
    }
  ],
  "web_accessible_resources": [
	  "css/cleansite/badges.css", "css/cleansite/avatars.css", "css/cleansite/compact.css", "css/chatmessages/base.css"
  ]
}